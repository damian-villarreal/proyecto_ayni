@model IEnumerable<ayni.Models.Publicacion>

@{
    ViewBag.Title = "Buscar";
    Layout = "~/Views/Shared/_EstandarLayout.cshtml";
}

<div class="jumbotron d-flex justify-content-center">
    <div class="container modal-body text-center">
        <h5>Buscar</h5>
        @using (Html.BeginForm("Iniciar", "Sesion"))
        {
            @*<img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">*@
            <div class="row">
                <!-- NombreUsuario -->
                <div class="col-sm-3">
                    @Html.TextBox("NombreUsuario", "", new { @class = "form-control", required = "required", placeholder = "Usuario" })
                </div>
                <div class="col-sm-3">
                    <select class="form-control" name="idCategoria" required>
                        <option value="" disabled selected>Elegí una categoría</option>
                        @foreach (var categoria in ViewBag.Categoria)
                        {
                            <option value="@categoria.idCategoria">@categoria.Descripcion</option>
                        }
                        @*@Html.ValidationMessageFor(model => model.idCategoria, "Obligatorio", new { @class = "text-danger" })*@
                    </select>
                </div>
                <div class="col-sm-3">
                    @Html.TextBox("NombreUsuario", "", new { @class = "form-control", required = "required", placeholder = "Usuario" })
                </div>
                <div class="col-sm-3">
                    @Html.TextBox("NombreUsuario", "", new { @class = "form-control", required = "required", placeholder = "Usuario" })
                </div>


            </div>
            <div class="form-group">
                <!-- Contraseña -->

                @Html.TextBox("Password", "", new { @class = "form-control", @type = "password", required = "required", placeholder = "Contraseña" })
            </div>

            <button type="submit" class="btn btn-primary btn-lg btn-block" name="enviarAutenticacion">Ingresar</button>
            <div class="card-group">
                <table id="example" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Descripción</th>
                            <th>Valor</th>
                            <th>Categoría</th>
                            <th>Usuario</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>
                                    <h4 class="card-title mh-100">
                                        @Html.ActionLink(@p.Titulo, "Detalles", "Publicacion", new { idPublicacion = p.idPublicacion }, new { @class = "" })
                                    </h4>
                                </td>
                                <td>
                                    <p class="card-text  text-justify">@p.Descripcion</p>
                                </td>
                                <td>
                                    <p class="card-text  text-justify">@p.Valor</p>
                                </td>
                                <td>
                                    <p class="card-text  text-justify">@p.Categoria.Descripcion</p>
                                </td>
                                <td>
                                    <p class="card-text  text-justify">@p.Usuario.NombreUsuario</p>
                                </td>
                                <td>
                                    @{
                                        if (Session["id"] == null || p.Usuario.NombreUsuario == HttpContext.Current.Session["nombreUsuario"].ToString())
                                        {
                                            <p>Sin datos...</p>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-success btn-rounded" type="submit" data-toggle="modal" data-target="#ofrecimiento-@p.idPublicacion">Yo te ayudo!</button>


                                        }
                                    }
                                </td>
                            </tr>

                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Título</th>
                            <th>Descripción</th>
                            <th>Valor</th>
                            <th>Categoría</th>
                            <th>Usuario</th>
                            <th>Estado</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
    </div>

    

</div>