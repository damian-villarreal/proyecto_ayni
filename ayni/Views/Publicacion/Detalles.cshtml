@model ayni.Models.Publicacion

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_EstandarLayout.cshtml";
}

@*@using (Html.BeginForm())*@
{
@Html.AntiForgeryToken()

<div class="container py-4">

    @*<h5 class="card-header white-text text-center py-4">
            <strong>Detalle de publicacion</strong>
        </h5>*@
    <form class="form-signin" action="@Url.Action("Baja", "Publicacion")" method="post">
        @Html.HiddenFor(p => p.idPublicacion)
        <div class="card mb-4 shadow-sm h-100 mt-2">
            <div class="card-body mh-100">

                @if (@Model.idUsuario == Convert.ToInt32(
                    Session["id"]))
                {
                <div>
                    @Html.ActionLink("Editar", "Modificar", "Publicacion", new { idPublicacion = Model.idPublicacion }, new { @class = "btn btn-outline-primary" })

                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#eliminarPublicacionModal">Eliminar   </button>
                    @Html.Partial("../Partials/pv_EliminarPublicacionModal")
                </div>
                <div>
                    @Html.ActionLink("Confirmar favor recibido","Finalizar", "Publicacion", new {idPublicacion = Model.idPublicacion}, new {@class = "btn btn-success" })
                </div>

                }
                <div>
                    <div>
                        <p>Fecha de publicacion: @Model.Fecha_publicacion.Day/@Model.Fecha_publicacion.Month/@Model.Fecha_publicacion.Year</p>
                    </div>

                    <div>
                        @Html.Raw(TempData["MensajeModif"])
                    </div>
                </div>

                <span class="badge badge-pill badge-primary">@Model.Categoria.Descripcion</span>
                <h4 class="card-title mh-100">
                    @Model.Titulo
                </h4>
                <p class="card-text">@Model.Descripcion</p>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Comentarios: </label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" readonly></textarea>
                </div>
            </div>

            <div class="card-footer">

                <div class="d-flex justify-content-between align-items-center">

                    <small class="text-muted">@Model.Categoria.Descripcion</small>
                    <small class="text-muted">Valor: @Model.Valor</small>
                    @*<button type="button" class="btn btn-sm btn-outline-secondary">Yo te ayudo!</button>*@
                </div>
            </div>
        </div>
    </form>
</div>




