
@{
    ViewBag.Title = "pv_IngresarModal";
}

<!-- Main navigation -->
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
     
            <div class="modal-body text-center">

                <h5 class="modal-title m-2" id="exampleModalLabel">Iniciar sesión</h5>

                @using (Html.BeginForm("Iniciar", "Sesion"))
                {
                    @*<img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">*@
                    <div class="form-group">
                        <!-- NombreUsuario -->
                        @Html.TextBox("NombreUsuario", "", new { @class = "form-control", required = "required", placeholder = "Usuario" })

                    </div>
                    <div class="form-group">
                        <!-- Contraseña -->

                        @Html.TextBox("Password", "", new { @class = "form-control", @type = "password", required = "required", placeholder = "Contraseña" })
                    </div>

                    <button type="submit" class="btn btn-primary btn-block" name="enviarAutenticacion">Ingresar</button>


                }

                    <div class="m-2">
                        <p>¿Todavia no estás registrado?</p>
                        @Html.ActionLink("Crear una cuenta", "Registro", "Usuario", null, new { @class = "btn btn-info" })
                    </div>
                </div>
             
        </div>
    </div>
</div>

