
@{
    ViewBag.Title = "pv_EliminarModal";
}

<!-- Main navigation -->
<!-- Modal -->
<div class="modal fade" id="eliminarPublicacionModal" tabindex="-1" role="dialog" aria-labelledby="eliminarPublicacionModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">¿Está completamente seguro?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
            <div class="form-signin">
                <div class="modal-body" ">
                    <div class="col">
                        <!-- NombreUsuario -->
                        <div class="md-form">
                            <p>Esta acción eliminará permanentemente esta publicación y no se podrá deshacer.</p>
                        </div>
                    </div>
                    <div class="col">
                        <!-- Contraseña -->
                        <div class="md-form">
                            <label for="Password">Escriba su contraseña para confirmar.</label>
                            @Html.TextBox("Password", "", new { @class = "form-control", @type = "password" })
                        </div>
                    </div>
                </div>
                    <div class="modal-footer">
                        <input class="btn btn-danger" type="submit" name="enviarAutenticacion" value="Eliminar" />
                    </div>

            </div>
            
        </div>
    </div>
</div>
