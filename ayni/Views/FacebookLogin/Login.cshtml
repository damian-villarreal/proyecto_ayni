    @Html.ActionLink("Login with facebook", "Facebook", "FacebookLogin")

    <table>

        <tr><td>Email:</td><td><b>@TempData["email"]</b></td></tr>

        <tr><td>First Name:</td><td><b>@TempData["first_name"]</b></td></tr>
