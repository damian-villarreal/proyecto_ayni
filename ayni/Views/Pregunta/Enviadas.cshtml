@using ayni.Models
@model IEnumerable<ayni.Models.Pregunta>
@{
    ViewBag.Title = "Enviadas";
    Layout = "~/Views/Shared/_EstandarLayout.cshtml";
}

<div class="container col-lg-10 col-md-10 col-sm-12">
    <h4 class="display-4 mb-3" style="font-size:2.5rem">Preguntas</h4>
    <div class="card">
        <div class="card-body">
            <ul class="nav nav-tabs mb-4">
                <li class="nav-item">
                    <a class="nav-link active" href="~/Pregunta/Enviadas">Enviadas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="~/Pregunta/Recibidas">Recibidas</a>
            </ul>

            @if (Model.Count() == 0)
            {
                <div class="m-3">
                    <div class="row justify-content-center">
                        <p>
                            Todavía no hiciste ninguna pregunta
                        </p>
                    </div>
                </div>
            }

            else
            {
                <table class="table table-borderless">

                    <tbody>

                        @foreach (Pregunta p in Model)
                        {
                            <tr class="m-5">

                                <td class="">

                                    @*<img class="" style="object-fit:cover; height: 100px; width:120px" src="@Url.Content(@p.Publicacion.Imagen)" />*@
                                    <div>

                                        <h5 class="mb-1">
                                            @p.Publicacion.Titulo

                                        </h5>

                                    </div>


                                    <div class="media my-3">
                                        <img class="rounded-circle mr-2" height="30" src="@Url.Content(p.Usuario.Foto)" />
                                        <div class="media-body col-12 py-2" style="background-color: #f5f5f5">
                                            <span class="">
                                                @p.Descripcion
                                                <small class="text-muted">@p.Fecha</small>
                                            </span>
                                        </div>
                                    </div>

                                    @if (p.Respuesta != null)
                                    {
                                        <div class="media my-3">

                                            <div class="media-body col-12 py-2" style="background-color: #e0e0e0">
                                                <span class="text-right">
                                                    @p.Respuesta.Descripcion
                                                    <small class="text-muted">@p.Fecha</small>
                                                </span>
                                            </div>
                                            <img class="rounded-circle ml-2" height="30" src="@Url.Content(p.Respuesta.Usuario.Foto)" />
                                        </div>

                                    }
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>