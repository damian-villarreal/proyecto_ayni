@using ayni.Models
@model IEnumerable<ayni.Models.Pregunta>
@{
    ViewBag.Title = "Enviadas";
    Layout = "~/Views/Shared/_EstandarLayout.cshtml";
}

<div class="container col-lg-10 col-md-10 col-sm-12">
    <h4 class="display-4 mb-3" style="font-size:2.5rem">Preguntas</h4>
    <div class="card">
        <div class="card-body">
            <ul class="nav nav-tabs mb-4">
                <li class="nav-item">
                    <a class="nav-link active" href="~/Pregunta/Enviadas">Enviadas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " href="~/Pregunta/Recibidas">Recibidas</a>
            </ul>

            @if (Model.Count() == 0)
            {
                <div class="m-3">
                    <div class="row justify-content-center">
                        <p>
                            Todavía no hiciste ninguna pregunta
                        </p>
                    </div>
                </div>
            }

            else
            {
                <ul class="list-group">

                    @foreach (Pregunta p in Model)
                    {

                        
                            <a href="#" class="list-group-item list-group-item-action border-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <strong>@p.Publicacion.Usuario.Nombre @p.Publicacion.Usuario.Apellido</strong>
                                    <small>@p.Fecha.Value.ToShortDateString()</small>
                                </div>
                                <h5 class="mb-1">@p.Publicacion.Titulo</h5>

                                    <p class="text-muted">@p.Descripcion</p>
                                @if (p.Respuesta != null)
                                {
                                    <small class="text-muted">@p.Respuesta.Descripcion</small>
                                }
                            </a>
                    }
                </ul>
            }
        </div>
    </div>
</div>