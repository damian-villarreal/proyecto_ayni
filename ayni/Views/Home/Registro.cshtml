
@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_EstandarLayout.cshtml";
}

<div class="card mt-3">

    <h5 class="card-header nav-scrolled white-text text-center py-4">
        <strong>Registro</strong>
    </h5>
    <div class="card-body px-lg-5 pt-0">

        <!-- Form -->
        <form class="text-center mt-3">
            <div class="form-row">
                <div class="col">
                    <!-- Nombre -->
                    <div class="md-form">
                        <input type="text" id="materialRegisterFormFirstName" class="form-control">
                        <label for="materialRegisterFormFirstName">Nombre/s</label>
                    </div>
                </div>
                <div class="col">
                    <!-- Apellido -->
                    <div class="md-form">
                        <input type="email" id="materialRegisterFormLastName" class="form-control">
                        <label for="materialRegisterFormLastName">Apellido/s</label>
                    </div>
                </div>
            </div>

            <!-- Ubicación/Mail -->

            <div class="form-row">
                <div class="col">
                    <!-- Ubicación -->
                    <div class="md-form">
                        <input type="text" id="materialRegisterFormEmail" class="form-control">
                        <label for="materialRegisterFormEmail">Ubicación</label>
                    </div>
                </div>
                <div class="col">
                    <!-- E Mail -->
                    <div class="md-form">
                        <input type="email" id="materialRegisterFormEmail" class="form-control">
                        <label for="materialRegisterFormEmail">E-mail</label>
                    </div>
                </div>
            </div>

            <!-- Cotraseña/re -->

            <div class="form-row">
                <div class="col">
                    <input type="password" id="materialRegisterFormPassword" class="form-control" aria-describedby="materialRegisterFormPasswordHelpBlock">
                    <label for="materialRegisterFormPassword">Contraseña</label>
                    <small id="materialRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
                        Mínimo 8 caracteres
                    </small>
                </div>
                <div class="col">
                    <input type="password" id="materialRegisterFormPassword" class="form-control" aria-describedby="materialRegisterFormPasswordHelpBlock">
                    <label for="materialRegisterFormPassword">Repetir contraseña</label>
                    <small id="materialRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
                        Debe re ingresar la contraseña
                    </small>
                </div>
            </div>

            <!-- acepto -->
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="materialRegisterFormNewsletter">
                <label class="form-check-label" for="materialRegisterFormNewsletter">Acepto los términos y condiciones</label>
            </div>

            <!-- Sign up button -->
            <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Enviar</button>

