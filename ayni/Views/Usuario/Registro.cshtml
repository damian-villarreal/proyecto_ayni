
@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_EstandarLayout.cshtml";
}

@model ayni.Models.Usuario

<div class="jumbotron d-flex justify-content-center">
    <div class="card col-6 shadow-sm">


        <div class="card-body">
            <h5 class="card-title white-text">
                <strong>Crear cuenta</strong>
                @*<p class="text-danger">@TempData["errorSaldo"]</p>*@
            </h5>
            <!-- Form -->
            <form action="@Url.Action("Alta", "Usuario")" method="post" class="mt-3">


                <div class="form-group">
                    <!-- NombreUsuario -->
                    <div class="md-form">
                        <label for="NombreUsuario">Nombre Usuario</label>
                        @Html.TextBoxFor(u => u.NombreUsuario, "", new { @class = "form-control", required = "required" })

                    </div>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <div class="md-form">

                        <label for="materialRegisterFormFirstName">Email</label>

                        @Html.TextBoxFor(u => u.Email, "", new { @class = "form-control", required = "required", type = "email" })
                        @Html.ValidationMessageFor(u => u.Email)
                    </div>
                </div>

                <!-- Contraseña -->

                <div class="form-group">
                    <div class="md-form">

                        <!-- Contraseña -->
                        <label for="Password">Contraseña</label>

                        @Html.TextBoxFor(u => u.Password, "", new { @class = "form-control", @type = "password", required = "required" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="md-form">

                        <!-- Confirmar contraseña -->
                        <label for="Password">Confirmar Contraseña</label>

                        @Html.TextBox("Repass", "", new { @class = "form-control", @type = "password", required = "required" })
                    </div>
                </div>


